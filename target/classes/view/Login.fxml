<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.skincaretracker.controller.LoginController"
      styleClass="login-pane"
      alignment="CENTER"
      spacing="20">
    
    <padding>
        <Insets top="50" right="50" bottom="50" left="50"/>
    </padding>

    <Text styleClass="title-text" text="Skin Care Tracker"/>
    <Text styleClass="subtitle-text" text="Login to your account"/>

    <VBox spacing="10" maxWidth="300">
        <TextField fx:id="usernameField" 
                  promptText="Username"
                  styleClass="text-field"/>
                  
        <PasswordField fx:id="passwordField" 
                      promptText="Password"
                      styleClass="password-field"/>
                      
        <Label fx:id="errorLabel" 
               styleClass="error-label"
               visible="false"
               managed="false"/>
               
        <Button text="Login" 
                onAction="#handleLogin"
                styleClass="button"
                maxWidth="Infinity"/>
                
        <HBox alignment="CENTER" spacing="5">
            <Text text="Don't have an account?"/>
            <Hyperlink text="Register" onAction="#handleRegister"/>
        </HBox>
    </VBox>
</VBox>
