<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.skincaretracker.controller.DashboardController"
            styleClass="dashboard-pane">

    <!-- Top Header -->
    <top>
        <HBox styleClass="header-pane" alignment="CENTER_RIGHT" spacing="10">
            <padding>
                <Insets top="10" right="20" bottom="10" left="20"/>
            </padding>
            <Label fx:id="userNameLabel" text="Welcome, User"/>
        </HBox>
    </top>

    <!-- Left Side Navigation -->
    <left>
        <VBox styleClass="side-nav" prefWidth="200" spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button text="My Products"
                    onAction="#showProducts"
                    styleClass="nav-button"
                    maxWidth="Infinity"/>
            <Button text="Reminders"
                    onAction="#showReminders"
                    styleClass="nav-button"
                    maxWidth="Infinity"/>
            <Button text="Profile"
                    onAction="#showProfile"
                    styleClass="nav-button"
                    maxWidth="Infinity"/>
            <!-- Разделитель для push logout кнопки вниз -->
            <Region VBox.vgrow="ALWAYS"/>
            <Button text="Logout"
                    onAction="#handleLogout"
                    styleClass="nav-button logout-button"
                    maxWidth="Infinity"/>
        </VBox>
    </left>

    <!-- Main Content Area -->
    <center>
        <StackPane fx:id="contentArea" styleClass="content-area">
            <!-- Default Welcome View -->
            <VBox alignment="CENTER" spacing="30" styleClass="welcome-view">
                <padding>
                    <Insets top="40" right="40" bottom="40" left="40"/>
                </padding>

                <Text styleClass="title-text"
                      text="Welcome to Skin Care Tracker"/>

                <Text styleClass="subtitle-text"
                      text="Select an option from the menu to get started"/>

                <!-- Dashboard Cards -->
                <HBox spacing="30" alignment="CENTER">
                    <VBox alignment="CENTER" spacing="10" styleClass="dashboard-card">
                        <padding>
                            <Insets top="20" right="30" bottom="20" left="30"/>
                        </padding>
                        <Text styleClass="card-title" text="Products"/>
                        <Text fx:id="productCount" styleClass="card-count" text="0"/>
                    </VBox>

                    <VBox alignment="CENTER" spacing="10" styleClass="dashboard-card">
                        <padding>
                            <Insets top="20" right="30" bottom="20" left="30"/>
                        </padding>
                        <Text styleClass="card-title" text="Active Reminders"/>
                        <Text fx:id="reminderCount" styleClass="card-count" text="0"/>
                    </VBox>
                </HBox>

                <!-- Quick Actions -->
                <HBox spacing="15" alignment="CENTER">
                    <Button text="Add Product"
                            onAction="#showProducts"
                            styleClass="primary-button"/>
                    <Button text="Set Reminder"
                            onAction="#showReminders"
                            styleClass="secondary-button"/>
                </HBox>
            </VBox>
        </StackPane>
    </center>
</BorderPane>